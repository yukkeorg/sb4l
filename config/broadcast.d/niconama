VBITRATE="180"
ASAMPLINGRATE="44100"
ABITRATE="96"
ACHANNEL="2"
FPS=30

VCODEC_OPTS="-vcodec libx264 
             -flags +loop -deblock 0:0 
             -refs 4 -subq 7 -bf 16 -b_strategy 1 -b:v ${VBITRATE}k 
             -b-pyramid 1 -wpredp 1 -mixed-refs 1 -mbtree 1 -fast-pskip 1 
             -cmp +chroma -qmin 10 -qmax 51 -keyint_min 25 
             -partitions i4x4,p8x8,p4x4,b8x8,i8x8 
             -sc_threshold 40 -g 200"

ACODEC_OPTS="-acodec libfaac"
OUTPUT_OPTS="-f flv -s 512x384"
